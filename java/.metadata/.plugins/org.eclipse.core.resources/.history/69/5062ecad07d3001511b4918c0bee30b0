package array;

import org.junit.Test;

public class Str {

	public boolean isLetter(char c) {
		if ((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z')) {
			return true;
		} else {
			return false;
		}
	}

	public int lastWorldLen(String s) {
		int len = s.length();
		if (len < 1) {
			return 1;
		}
		int pos = len - 1;
		while (pos >= 0) {
			if (isLetter(s.charAt(pos))) {
				break;
			} else {
				pos--;
			}
		}
		int retLen = 0;
		while (pos >= 0) {
			if (!isLetter(s.charAt(pos))) {
				break;
			} else {
				pos--;
				retLen++;
			}
		}
		return retLen;
	}

	@Test
	public void testLastWorldLen() {
		System.out.println(lastWorldLen("abc def "));
	}
}
